@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
title Контекстная диаграмма C4: Спортивной Статистики
Person(analyst, "Спортивный аналитик", "Анализирует статистику для стратегий и тактик")
Person(coach, "Тренер", "Просматривает статистику игроков, команды и соперников")
Person(player, "Игрок", "Отслеживает свои достижения и сравнивает с другими")
Person(fan, "Фанат", "Изучает результаты и статистику любимой команды или игрока")
Person(journalist, "Журналист", "Получает данные для новостей, обзоров и прогнозов")
Person(organizer, "Организатор турниров", "Мониторит соревнования и предоставляет статистику участникам и зрителям")
Person(admin, "Администратор", "Модерирует контент, управляет пользователями и данными")
Person(anon_user, "Анонимный пользователь", "Просматривает общедоступную статистику без регистрации")

System(sports_stats_system, "Система Спортивной Статистики", "Централизованная система сбора, хранения, анализа и предоставления спортивной статистики")
System_Ext(external_apis, "Внешние спортивные API", "Источники данных, такие как HLTV или другие базы статистики")
System_Ext(video_hosting, "Сервисы видео-хостинга", "Хранение и предоставление видео-моментов матчей, например, YouTube")
System_Ext(notification_services, "Сервисы уведомлений", "Отправка email, SMS или push-уведомлений")
System_Ext(payment_gateway, "Платежный шлюз", "Обработка подписок или премиум-доступа, если применимо")
System_Ext(social_media, "Социальные сети", "Интеграция для шаринга статистики и инфографики")

Rel(analyst, sports_stats_system, "Анализирует данные, сравнивает команды, генерирует отчеты")
Rel(coach, sports_stats_system, "Просматривает статистику, анализирует эффективность игроков")
Rel(player, sports_stats_system, "Отслеживает личную статистику, сравнивает с другими")
Rel(fan, sports_stats_system, "Изучает результаты, создает инфографику")
Rel(journalist, sports_stats_system, "Получает данные для обзоров, делает прогнозы")
Rel(organizer, sports_stats_system, "Мониторит турниры, предоставляет live-статистику")
Rel(admin, sports_stats_system, "Модерирует данные, управляет пользователями")
Rel(anon_user, sports_stats_system, "Просматривает общедоступную статистику")
Rel(sports_stats_system, external_apis, "Импортирует актуальную статистику и данные матчей")
Rel(sports_stats_system, video_hosting, "Добавляет и отображает видео-моменты")
Rel(sports_stats_system, notification_services, "Отправляет уведомления об обновлениях и событиях")
Rel(sports_stats_system, payment_gateway, "Обеспечивает премиум-доступ и подписки")
Rel(sports_stats_system, social_media, "Позволяет делиться статистикой и инфографикой")

@enduml
